<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ee.ioc.phon.android.arvutaja"
    android:versionCode="406"
    android:versionName="0.4.06" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="10" />

    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/labelApp" >
        <activity
            android:name=".ArvutajaActivity"
            android:label="@string/labelApp" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Preferences"
            android:label="@string/labelPreferences" >
        </activity>

        <provider
            android:name=".provider.QueriesContentProvider"
            android:authorities="ee.ioc.phon.android.arvutaja.provider.QueriesContentProvider" />

        <receiver android:name=".provider.ArvutajaAppWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/appwidget_info" />
        </receiver>
    </application>

</manifest>
