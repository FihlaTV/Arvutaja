<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ee.ioc.phon.android.arvutaja"
    android:versionCode="316"
    android:versionName="0.3.16" >

    <uses-sdk android:minSdkVersion="4" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/labelApp" >
        <activity
            android:label="@string/labelApp"
            android:name=".ArvutajaActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/labelPreferences"
            android:name=".Preferences" >
        </activity>

        <provider
            android:authorities="ee.ioc.phon.android.arvutaja.provider.QueriesContentProvider"
            android:name=".provider.QueriesContentProvider" />

        <receiver android:name=".provider.ArvutajaAppWidgetProvider" >
            <intent-filter >
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/appwidget_info" />
        </receiver>
    </application>

</manifest>