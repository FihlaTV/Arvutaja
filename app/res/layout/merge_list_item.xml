<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/list_item_utterance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:paddingBottom="10dp"
        android:textColor="@color/grey1"
        android:textIsSelectable="false"
        android:textSize="@dimen/textSizeListItemUtterance"
        android:typeface="sans" />

    <TextView
        android:id="@+id/list_item_translation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/list_item_utterance"
        android:textColor="?android:textColorSecondary"
        android:textIsSelectable="false"
        android:textSize="@dimen/textSizeListItemTranslation"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/list_item_evaluation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_translation"
        android:textColor="?android:textColorPrimary"
        android:textIsSelectable="false"
        android:textSize="@dimen/textSizeListItemEvaluation"
        android:typeface="monospace" />

</merge>