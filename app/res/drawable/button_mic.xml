<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="@color/buttonPressed2" android:startColor="@color/buttonPressed1" />

            <stroke android:width="1dp" android:color="@color/buttonStroke" />

            <corners android:radius="90dp" />

            <padding android:bottom="30dp" android:left="30dp" android:right="30dp" android:top="30dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="@color/buttonFocused2" android:startColor="@color/buttonFocused1" />

            <stroke android:width="1dp" android:color="@color/buttonStroke" />

            <corners android:radius="90dp" />

            <padding android:bottom="30dp" android:left="30dp" android:right="30dp" android:top="30dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/buttonNormal2" android:startColor="@color/buttonNormal1" />

            <stroke android:width="1dp" android:color="@color/buttonStroke" />

            <corners android:radius="90dp" />

            <padding android:bottom="30dp" android:left="30dp" android:right="30dp" android:top="30dp" />
        </shape></item>

</selector>